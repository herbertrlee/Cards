<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center_horizontal|top"
     >
    
    <TextView
        android:id="@+id/game_history_header_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	  	android:gravity="center"
	  	style="@android:style/TextAppearance.Medium"
        />
    <LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:gravity="center"
	    >
		<TextView
		    android:id="@+id/black_card_history_text_view"
		    android:layout_width="150dp"
		    android:layout_height="200dp"
		    style="@style/BlackCard"
		    android:layout_marginRight="10dp"
		    />
		<ScrollView
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:layout_height="200dp"
		     >
		    <RadioGroup
		        android:id="@+id/player_radio_group"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		         >
		        
		    </RadioGroup>
		    
		</ScrollView>
	</LinearLayout>
	<FrameLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/submission_history_container"
	    >
	    
	</FrameLayout>
	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:gravity="center"
	    android:weightSum="3"
	    android:background="@color/lightGray"
	    >
	    <Button
	        android:id="@+id/back_button"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:padding="5dp"
	        style="?android:attr/buttonBarButtonStyle"
	        android:text="@string/backward"
	        />
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="1"
            android:prompt="@string/jump"
            android:layout_height="wrap_content"
            android:id="@+id/round_select_spinner"
            />
	    <Button
	        android:id="@+id/forward_button"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:padding="5dp"
	        style="?android:attr/buttonBarButtonStyle"
	        android:text="@string/forward"
	        />
	</LinearLayout>
</LinearLayout>
