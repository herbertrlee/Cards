<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center_horizontal|top" >
    
	<TextView
	    android:id="@+id/user_is_picking_text_view"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    style="@android:style/TextAppearance.Medium"
	     />
	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:gravity="center"
	    >
		<TextView
		    android:id="@+id/black_card_czar_text_view"
		    android:layout_width="150dp"
		    android:layout_height="200dp"
		    style="@style/BlackCard"
		    android:layout_marginRight="10dp"
		    />
		<TextView
		    style="@style/WhiteCard"
		    android:layout_height="200dp"
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:id="@+id/all_subs_in_text_view"
		    />
	</LinearLayout>
	<FrameLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/submission_container"
	    >
	    
	</FrameLayout>
	<Button
	   	android:layout_width="match_parent"
	   	android:layout_height="wrap_content"
	   	android:id="@+id/pick_winner_button"
	   	android:text="@string/pick_winner"
       	style="?android:attr/buttonBarButtonStyle"
	    android:background="@color/lightGray"
	   	 />
</LinearLayout>
